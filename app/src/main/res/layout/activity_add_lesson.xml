<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_a_lesson"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_preferred_swim_style"
            android:layout_marginBottom="8dp"/>

        <!-- Use CheckBox for multiple selections -->
        <CheckBox
            android:id="@+id/checkbox_freestyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/freestyle" />

        <CheckBox
            android:id="@+id/checkbox_breaststroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breaststroke" />

        <CheckBox
            android:id="@+id/checkbox_butterfly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/butterfly" />

        <CheckBox
            android:id="@+id/checkbox_backstroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backstroke" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_preferred_lesson_type"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radio_lesson_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radio_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_lesson" />

            <RadioButton
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_lesson" />

            <RadioButton
                android:id="@+id/radio_either"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/either_private_or_group" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_preferred_lesson_duration"
            android:layout_marginBottom="8dp"/>

        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_preferred_lesson_time"
            android:layout_marginBottom="8dp"/>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_lesson"/>

    </LinearLayout>
</ScrollView>
